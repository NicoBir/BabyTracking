<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BreastActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/breast_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/breast_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/length_text"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/breast_Length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/breast_length_edit"
            android:inputType="number"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breast_which_text"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/breast_Spinner"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:spinnerMode="dropdown"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breast_qual_baby_text"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/breast_Quality_Baby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/breast_qual_edit"
            android:inputType="text"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breast_qual_mother_text"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/breast_Quality_Mother"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/breast_qual_edit"
            android:inputType="text"
            android:textSize="16sp" />
    </LinearLayout>


    <Button
        android:id="@+id/breast_Save_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/save_button"
        android:textSize="16sp" />

</LinearLayout>
